                </div>
                
            </div>

        </div>
    </section><!-- End About Us Section -->
    <!-- ======= Features Section ======= -->
    <section class="features">
        <div class="container">

            <div class="section-title">
                <h2>@Resources.integracion.desarrollo_de_negocios</h2>
            </div>
            <div class="row" data-aos="fade-up">
