            </div>

            <div class="row" data-aos="fade-up">
                <div class="col-md-5">
                    <img src="~/Content/img/generad/INTEGRACIÓN PROFESIONAL actitudes.jpeg" class="img-fluid" />
                </div>
                <div class="col-md-7 pt-4">
                    <h3>@Resources.integracion.disciplina_institucional_responsabilidad</h3>
                    <p>@Resources.integracion.disciplina_institucional_responsabilidad_1</p>
                    <p>@Resources.integracion.disciplina_institucional_responsabilidad_2</p>
                </div>
            </div>

            <br />
            <br />
            <div class="section-title">
                <h2>@Resources.integracion.formacion_directiva</h2>
            </div>

            <div class="row" data-aos="fade-up">
                <div class="col-md-5 order-1 order-md-2">
                    <img src="~/Content/img/generad/FORMACIÓN DIRECTIVA.jpeg" class="img-fluid" />
                </div>
                <div class="col-md-7 pt-5 order-2 order-md-1">
                    <h3>@Resources.integracion.comunicacion_efectiva</h3>
                    <p>
                        @Resources.integracion.comunicacion_efectiva_1
                    </p>
                    <h3>@Resources.integracion.vision_de_negocio</h3>
                    <p>
                        @Resources.integracion.vision_de_negocio_1
                    </p>
                </div>
            </div>

        </div>

        
