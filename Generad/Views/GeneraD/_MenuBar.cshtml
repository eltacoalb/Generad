<div class="container d-flex justify-content-between align-items-center">

    <div class="logo">
        <h1 class="text-light"><a href="@Url.Action("Index", "GeneraD", new { lang = Resources.Menu.lang })"><span>Genera-D</span></a></h1>
        <!-- Uncomment below if you prefer to use an image logo -->
        @*<a href="@Url.Action("Index", "GeneraD", new { lang = Resources.Menu.lang })"><img src="~/Content/img/generad/GENERA D,HOLDING,GOTA DE AGUA,MEDIA CARTA,130519.png" alt="" class="img-fluid"></a>*@
    </div>
    <br />
    @{
        var pageName = ViewContext.RouteData.Values["Action"].ToString();
    }
    <nav id="navbar" class="navbar">
        <ul>
            <li><a class="@(pageName == "Index" ? "active" : "")" href="@Url.Action("Index", "GeneraD", new { lang = Resources.Menu.lang })">@Resources.Menu.Inicio</a></li>
            <li><a class="@(pageName == "Nosotros" ? "active" : "")" href="@Url.Action("Nosotros", "GeneraD", new { lang = Resources.Menu.lang })">@Resources.Menu.Nosotros</a></li>
            <li><a class="@(pageName == "Holding" ? "active" : "")" href="@Url.Action("Holding", "GeneraD", new { lang = Resources.Menu.lang })">@Resources.Menu.Holding</a></li>
            <li><a class="@(pageName == "Comercializacion" ? "active" : "")" href="@Url.Action("Comercializacion", "GeneraD", new { lang = Resources.Menu.lang })">@Resources.Menu.Comercializacion</a></li>
            <li><a class="@(pageName == "IntegracionPersonal" ? "active" : "")" href="@Url.Action("IntegracionPersonal", "GeneraD", new { lang = Resources.Menu.lang })">@Resources.Menu.Integracionpersonal</a></li>
            <li><a class="@(pageName == "Documental" ? "active" : "")" href="@Url.Action("Documental", "GeneraD", new { lang = Resources.Menu.lang })">@Resources.Menu.Documental</a></li>
            <li><a class="@(pageName == "Contacto" ? "active" : "")" href="@Url.Action("Contacto", "GeneraD", new { lang = Resources.Menu.lang })">@Resources.Menu.Contacto</a></li>
            @if (Resources.Menu.lang == "es")
            {
                <li>
                    <a href="@Url.Action("ChangeLanguage", "GeneraD", new { lang = Resources.Menu.lang,view = pageName })">
                        <img src="~/Content/img/mexico.png" />
                    </a>
                </li>
            }
            @if (Resources.Menu.lang == "en")
            {
                <li>
                    <a href="@Url.Action("ChangeLanguage", "GeneraD", new { lang = Resources.Menu.lang,view = pageName })">
                        <img src="~/Content/img/estados-unidos-de-america.png" />
                    </a>
                </li>
            }

        </ul>
        <i class="bi bi-list mobile-nav-toggle"></i>
    </nav><!-- .navbar -->

</div>
