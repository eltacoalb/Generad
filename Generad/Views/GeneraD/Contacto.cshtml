@using Generad.Models
@model ContactoModel
<main id="main">

    <!-- ======= About Us Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>@Resources.Menu.Contacto</h2>
            </div>

        </div>
    </section><!-- End About Us Section -->
    <!-- ======= Contact Section ======= -->
    <section class="contact" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
        <div class="container">

            <div class="row">

                <div class="col-lg-6">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="info-box">
                                <i class="bx bx-map"></i>
                                <h3>@Resources.Contacto_div.Contacto_titulo</h3>
                                <p>@Resources.Contacto_div.Contacto</p>
                                <p>@Resources.Contacto_div.Contacto_2</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-box">
                                <i class="bx bx-envelope"></i>
                                <h3>@Resources.Contacto_div.Email</h3>
                                <p>@Resources.Contacto_div.Contacto_4</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-box">
                                <i class="bx bx-phone-call"></i>
                                <h3>@Resources.Contacto_div.Telefono</h3>
                                <p>@Resources.Contacto_div.Contacto_1</p>
                                <p>@Resources.Contacto_div.Contacto_3</p>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="col-lg-6">
                    <div class="fb-page" data-href="https://www.facebook.com/GeneraD-2105018149808382/" data-tabs="timeline,events,messages" data-width="500" data-height="388" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/GeneraD-2105018149808382/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/GeneraD-2105018149808382/">GeneraD</a></blockquote></div>
                </div>

            </div>
            <div class="row">
                <div class="col-lg-3">
                </div>
                <div class="col-lg-6">
                    <div class="container">

                        @using (Html.BeginForm("CreateEmail", "GeneraD", FormMethod.Post, new { id = "Form1", @class = "php-email-form2" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="row">
                                <div class="col-md-6 form-group">
                                    @Html.EditorFor(model => model.Nombre_form, new { htmlAttributes = new { @class = "form-control", placeholder = Resources.Contacto.Nombre_form } })
                                    @Html.ValidationMessageFor(model => model.Nombre_form, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6 form-group mt-3 mt-md-0">
                                    @Html.EditorFor(model => model.NombreCompania_form, new { htmlAttributes = new { @class = "form-control", placeholder = Resources.Contacto.NombreCompania_form } })
                                    @Html.ValidationMessageFor(model => model.NombreCompania_form, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group mt-3">
                                @Html.EditorFor(model => model.Email_form, new { htmlAttributes = new { @class = "form-control", placeholder = Resources.Contacto.Email_form } })
                                @Html.ValidationMessageFor(model => model.Email_form, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group mt-3">
                                @Html.EditorFor(model => model.Telefono_form, new { htmlAttributes = new { @class = "form-control", placeholder = Resources.Contacto.Telefono_form } })
                                @Html.ValidationMessageFor(model => model.Telefono_form, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group mt-3">
                                @Html.TextAreaFor(model => model.Mensaje_form, new { @class = "form-control", placeholder = Resources.Contacto.Mensaje_form })
                                @Html.ValidationMessageFor(model => model.Mensaje_form, "", new { @class = "text-danger" })
                            </div>
                            <div class="my-3">
                                <div class="loading">Loading</div>
                                @*<div class="error-message"></div>
                        <div class="sent-message">Your message has been sent. Thank you!</div>*@
                            </div>
                            <div class="text-center">
                                <button type="submit" form="Form1" value="Submit">@Resources.Contacto.Boton_form</button>
                            </div>
                        }
                    </div>
                </div>
                <div class="col-lg-3">
                </div>
            </div>
        </div>
    </section><!-- End Contact Section -->

</main><!-- End #main -->
