    <section class="contact" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
        <div class="container">

            <div class="row">


                <div class="container">
                    <div class="section-title">
                        <h2>@Resources.Documental.documental</h2>
                    </div>
                    <div class="row">
                        <div class="col-2"></div>
                        <div class="col-8">
                            @using (Html.BeginForm("Documetal_form", "GeneraD", FormMethod.Post, new { id = "Form1", @class = "php-email-form2" }))
                            {
                                @Html.AntiForgeryToken()
                                <center>
                                    <h4>@Resources.Documental.documental_4</h4>
                                </center>
                                <center>
                                    <div class="form-group mt-3">
                                        @Html.EditorFor(model => model.Nombre_form, new { htmlAttributes = new { @class = "form-control", placeholder = Resources.Contacto.Nombre_form } })
                                        @Html.ValidationMessageFor(model => model.Nombre_form, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group mt-3">
                                        @Html.EditorFor(model => model.Email_form, new { htmlAttributes = new { @class = "form-control", placeholder = Resources.Contacto.Email_form } })
                                        @Html.ValidationMessageFor(model => model.Email_form, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group mt-3">
                                        @{
                                            List<SelectListItem> listItems = new List<SelectListItem>();
                                            listItems.Add(new SelectListItem
                                            {
                                                Text = "-- " + Resources.Documental_form.opcion + " --",
                                                Value = "0",
                                                Selected = true
                                            });

                                            listItems.Add(new SelectListItem
                                            {
                                                Text = Resources.Documental_form.documetal_forms_1,
                                                Value = "1"
                                            });

                                            listItems.Add(new SelectListItem
                                            {
                                                Text = Resources.Documental_form.documetal_forms_2,
                                                Value = "2"
                                            });
                                        }

                                        @Html.DropDownListFor(model => model.Tipo_form, listItems, new { @class = "form-control", id = "Tipo" })
                                        @Html.ValidationMessageFor(model => model.Tipo_form, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group mt-3">
                                        @Html.DropDownListFor(model => model.Tipo_form2, new SelectList(""), new { @class = "form-control", id = "Tipo2" })
                                        @Html.ValidationMessageFor(model => model.Tipo_form2, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group mt-3">
                                        @Html.TextAreaFor(model => model.Mensaje_form, new { @class = "form-control", placeholder = Resources.Contacto.Mensaje_form })
                                        @Html.ValidationMessageFor(model => model.Mensaje_form, "", new { @class = "text-danger" })
                                    </div>
                                    <br />
                                    <div class="text-center"><button type="submit">@Resources.Contacto.Boton_form</button></div>
                                </center>


                            }
