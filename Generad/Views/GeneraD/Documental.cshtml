    $(function () {
        $("#Tipo").on("change", function () {
            var categorys = $('#Tipo2');
            //$("#Tipo2").empty();
            var categoryId = $(this).val();
            $.getJSON("/GeneraD/SetDocument", { id: categoryId }, function (response) {
                categorys.empty(); // remove any existing options
                $.each(response, function (index, item) {
                    categorys.append(`<option value="${item.Value}">${item.Text}</option>`);
                });
            });
            //$.get("/GeneraD/SetDocument", { id: categoryId }, function (data) {
